{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "public",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "target": "es2017",
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}